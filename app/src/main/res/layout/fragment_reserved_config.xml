<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--
    <Button
        android:id="@+id/reserved_callapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call drive api" />
        -->

    <Button
        android:id="@+id/reserved_googleSyncActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_sync_black_24dp"
        android:text="Synchronisation des données" />


    <Button
        android:id="@+id/reserved_view_csv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_contact_mail_black_24dp"
        android:text="Consulter les données de contact" />

    <Button
        android:id="@+id/reserved_export_csv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_share_black_24dp"
        android:text="Exporter formulaire de contact CSV" />

    <Button
        android:id="@+id/reserved_reset_csv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_delete_black_24dp"
        android:text="Réinitialiser les données de contact" />

    <Button
        android:id="@+id/reserved_reset_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_delete_forever_black_24dp"
        android:text="Effacer toutes les données" />



</LinearLayout>